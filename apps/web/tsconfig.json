{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "verbatimModuleSyntax": false,
        "noEmit": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "env.d.ts",
        ".astro/types.d.ts"
    ]
}